#!/usr/bin/env node
/* vim: set filetype=javascript */

var croongaServer = require(__dirname + '/../lib/server');
var program = require('commander');

program
  .usage('[options]')
  .option('-p, --port <port>', 'specify port [3000]', Number, 3000)
  .option('-d, --dbpath <path>', 'database path [./database/croonga]', String, './database/croonga')
  .parse(process.argv);

var server;

server = croongaServer.createServer({
  dbPath: program.dbpath
});

server.listen(program.port, function() {
  console.log('croonga listening at %d', program.port);
  console.log('database is at %s', program.dbpath);
});
