#!/usr/bin/env node

var gcsServer = require(__dirname + '/../lib/server');
var program = require('commander');

var defaultDatabasePath = process.env.HOME + '/.gcs/database/gcs';
var defaultPrivilegedRange = '127.0.0.0/8';

program
  .version(require('../package').version)
  .usage('[options]')
  .option('-p, --port <port>',
          'specify port [7575]',
          Number,
          7575)
  .option('--database-path <path>',
          'database path [' + defaultDatabasePath + ']',
          String,
          defaultDatabasePath)
  .option('--privilege',
          'IP range for privileged clients [' + defaultPrivilegedRange + ']',
          String,
          defaultPrivilegedRange)
  .parse(process.argv);

var server;

server = gcsServer.createServer({
  databasePath:    program.databasePath,
  privilegedRange: program.privilege
});

server.listen(program.port, function() {
  console.log('gcs listening at %d', program.port);
  console.log('database is at %s', program.databasePath);
});
